package Codingtest;

import java.util.Arrays;

import static java.lang.Math.ceil;

public class Ct4 {
    static int[] numbers = {1, 2, 3, 4, 5};

    public static int solution(int n) {
        int answer = 1;
        answer = n/7 +1;
        if(n%7==0) {
            answer--;
        }
        return answer;
    }

        public static void main (String[]args){
            System.out.println(solution(15));

        }
    }
